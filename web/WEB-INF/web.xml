<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <param-name>EnvoyHost</param-name>
        <param-value>envoy</param-value>
    </context-param>
    <context-param>
        <param-name>FeedInTariff</param-name>
        <param-value>0.1388</param-value>
    </context-param>
    <context-param>
        <param-name>ExportTariff</param-name>
        <param-value>0.0485</param-value>
    </context-param>
    <context-param>
        <param-name>AjaxTimeout</param-name>
        <param-value>15000</param-value>
    </context-param>
    <context-param>
        <param-name>RefreshTime</param-name>
        <param-value>60000</param-value>
    </context-param>
    <context-param>
        <param-name>RetryTime</param-name>
        <param-value>5000</param-value>
    </context-param>
    <context-param>
        <param-name>FadeOutTime</param-name>
        <param-value>400</param-value>
    </context-param>
    <context-param>
        <param-name>FadeInTime</param-name>
        <param-value>10</param-value>
    </context-param>
    <context-param>
        <param-name>FadeOpacity</param-name>
        <param-value>0.125</param-value>
    </context-param>
    <servlet>
        <servlet-name>CarStop</servlet-name>
        <servlet-class>Car.CarStop</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CarStart</servlet-name>
        <servlet-class>Car.CarStart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>getSolarData</servlet-name>
        <servlet-class>Envoy.getSolarData</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CarStop</servlet-name>
        <url-pattern>/CarStop</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CarStart</servlet-name>
        <url-pattern>/CarStart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>getSolarData</servlet-name>
        <url-pattern>/getSolarData</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
